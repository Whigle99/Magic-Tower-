page {
  height:100%;
  background-image: url(https://7065-pet-real-1301063915.tcb.qcloud.la/public/images/indexTopBg.png);
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: top;
}
 
.sheet {
  background-color:#ffffff;
  border-radius: 16rpx;
  margin-top: 10rpx;
  width: 100%;
  height:220rpx;
  position:relative;
}

.question {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 5rpx;
  padding-left: 25rpx;
  text-align: left;
  word-break: keep-all;word-wrap: break-word;white-space: pre-line;
}
.border {
  height: 2rpx;
  width: 90%;
  background-color: #d4d4d4;
  margin: 16rpx auto;
}

.id {
  text-align: center;
  font-size: 29rpx;
  color: #c2c2c2;
  margin: auto;
  margin-top: 20rpx;
}
.question-images-area {
  padding: 40rpx 0;
}

.question-images-tool {
  display: flex;
  align-items: center;
}

.question-images {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}
.image{
  height:250rpx;
}
.sheet .right-img{
  height:60rpx;
  width:60rpx;
  position: absolute;
  right: 50rpx;
  bottom: 50rpx;
}
.sheet .right{
  font: 28rpx;
  position: absolute;
  right: 150rpx;

}
.bottom-img{
  display: flex;
  align-items: center;
  justify-content: center;
  height:160rpx;
  width:160rpx;
  position: fixed;
  bottom: 0;
}
.cover_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.buy_box {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 100px;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding: 20rpx;
  overflow: hidden;
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
}
.buy_box .title {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #333;
    padding: 20rpx 0;
}